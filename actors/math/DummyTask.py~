from calvin.actor.actor import Actor, manage, condition


class DummyTask(Actor):

    """
    Divides input on port 'dividend' with input on port 'divisor'
    Inputs :
        mailboxIn
    Output :
        mailboxOut
    """


    @manage(['size', 'flops'])
    def init(self, size, flops):
        self.size = size
        self.flops = flops

    @condition(action_input=['mailboxIn'], action_output=['mailboxOut'])
    def computeAndReturn(self, data):
        data = bytearray(self.size)
        for i in range(self.flops):
            a = 0
        
        return (data,)

    action_priority = (computeAndReturn,)
